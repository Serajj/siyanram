<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp" />

    <com.verbosetech.weshare.view.MontserratTextView
        android:id="@+id/fullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/userImage"
        android:layout_toLeftOf="@+id/userAction"
        android:layout_toRightOf="@+id/userImage"
        android:layout_toStartOf="@+id/userAction"
        android:ellipsize="marquee"
        android:lineSpacingExtra="1.7sp"
        android:singleLine="true"
        android:text="James Williams"
        android:textColor="#4e4e4e"
        android:textSize="15sp" />

    <Button
        android:id="@+id/userAction"
        android:layout_width="86dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/angular_pink_box"
        android:gravity="center"
        android:lineSpacingExtra="5sp"
        android:text="Following"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold" />
</RelativeLayout>