<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.verbosetech.weshare.fragment.AboutMeFragment">

    <ScrollView
        android:id="@+id/main_sv"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="#F32020"
                    android:textFontWeight="800"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/height_and_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6E6B6B"
                        android:text="5.6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6E6B6B"
                        android:id="@+id/religion_and_caste"
                        android:text="Hindu:Khatri,Soni" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6E6B6B"
                        android:id="@+id/mother_tounge"
                        android:text="Hindi-Rajasthan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6E6B6B"
                        android:id="@+id/city"
                        android:text="Kota" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6E6B6B"
                        android:id="@+id/occupation"
                        android:text="Business-Advertising Profe.." />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6E6B6B"
                        android:id="@+id/income"
                        android:text="Rs.7.5-10Lakh per Annum" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6E6B6B"
                        android:id="@+id/heducation"
                        android:text="B.E/B.Tech" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6E6B6B"
                        android:id="@+id/mstatus"
                        android:text="Never Married" />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#6E6B6B"
                    android:id="@+id/profilemanagedby"
                    android:text="His Profile is managed for Self"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/aboutme"
                    android:textColor="#6E6B6B"
                    android:text="Hey my self pawan and have done my engineering from RTU and now i am working with digital maketing"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#F32020"
                    android:text="  Carrer"
                    android:textSize="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"

                    android:textColor="#6E6B6B"
                    android:text="Employed In"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#818080"
                    android:id="@+id/c_employedin"
                    android:textFontWeight="900"
                    android:text="Business/Self Employed"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#6E6B6B"
                    android:text="Earning"/>

                <TextView
                    android:id="@+id/c_annual_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Rs.7.5-10Lakh per Annum"
                    android:textColor="#818080"
                    android:textFontWeight="900" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#F32020"
                    android:text="  Education "
                    android:textSize="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#6E6B6B"
                    android:text="Highest Education"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textFontWeight="900"
                    android:textColor="#6E6B6B"
                    android:id="@+id/e_highest"
                    android:text="BE/B.Tech"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#6E6B6B"
                    android:text="UG Degree"/>

                <TextView
                    android:id="@+id/e_ugdegree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="BE/B.Tech"
                    android:textColor="#6E6B6B"
                    android:textFontWeight="900" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#6E6B6B"
                    android:text="UG College"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textFontWeight="900"
                    android:textColor="#6E6B6B"
                    android:id="@+id/e_ugcollege"
                    android:text="BE/B.Tech"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#6E6B6B"
                    android:text="PG Degree"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textFontWeight="900"
                    android:textColor="#6E6B6B"
                    android:id="@+id/e_pgdegree"
                    android:text="BE/B.Tech"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#6E6B6B"
                    android:text="PG College"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textFontWeight="900"
                    android:textColor="#6E6B6B"
                    android:id="@+id/e_pgcollege"
                    android:text="BE/B.Tech"/>




            </LinearLayout></LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/not_filled_rl"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="Not Filled Yet."
            android:gravity="center"
            android:textColor="#F32020"
            android:textFontWeight="800"
            android:textSize="20dp" />
    </RelativeLayout>
</FrameLayout>